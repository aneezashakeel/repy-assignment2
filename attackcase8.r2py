# Test: Append after close should revalidate
try:
  myfile = ABopenfile("testfile8.txt", True)
  myfile.writeat("SE", 0)
  myfile.close()
  
  myfile = ABopenfile("testfile8.txt", False)
  myfile.writeat("X", 2)  # Makes it "SEX"
  myfile.close()
  
  myfile = ABopenfile("testfile8.txt", False)
  data = myfile.readat(None, 0)
  if data[-1] != 'E':
    log("BUG: Invalid append was saved!")
  myfile.close()
except:
  pass
